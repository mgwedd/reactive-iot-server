{
    "name": "reactive-iot-server",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "debug": "ndb src/server.js",
        "test": "mocha --require test/setup.js",
        "lint": "eslint --fix .",
        "predeploy": "npm audit",
        "deploy": "git push heroku master"
    },
    "keywords": [],
    "author": "Michael Wedd",
    "license": "ISC",
    "eslintConfig": {
        "extends": "airbnb-base",
        "env": {
            "es6": true,
            "browser": false
        },
        "plugins": [
            "chai-friendly",
            "import"
        ],
        "rules": {
            "brace-style": [
                "error",
                "stroustrup"
            ],
            "comma-dangle": [
                "error",
                "never"
            ],
            "space-in-parens": [
                "error",
                "always"
            ],
            "semi": [
                "error",
                "never"
            ],
            "no-unused-vars": [
                "warn"
            ],
            "no-var": [
                "off"
            ],
            "one-var": [
                "off"
            ]
        }
    },
    "devDependencies": {
        "@babel/plugin-proposal-optional-chaining": "^7.9.0",
        "babel": "^6.23.0",
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-eslint": "^10.1.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "chai": "^4.2.0",
        "eslint": "^7.0.0",
        "eslint-config-airbnb": "^18.1.0",
        "eslint-config-airbnb-base": "^14.1.0",
        "eslint-plugin-chai-friendly": "^0.6.0",
        "eslint-plugin-import": "^2.20.2",
        "mocha": "^6.1.4",
        "ndb": "^1.0.45",
        "nodemon": "^1.19.1",
        "postgrator": "^4.0.0",
        "supertest": "^4.0.2"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^8.0.0",
        "express": "^4.17.1",
        "helmet": "^3.18.0",
        "jsonwebtoken": "^9.0.0",
        "knex": "^0.21.1",
        "morgan": "^1.9.1",
        "passport": "^0.4.1",
        "winston": "^3.2.1",
        "xss": "^1.0.6"
    }
}
